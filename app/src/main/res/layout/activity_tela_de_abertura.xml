<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TelaDeAbertura">

    <TextView
        android:id="@+id/tvGuia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guia turístico"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/scrollView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="394dp"
        android:layout_height="640dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTituloMendes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Parque Chico Mendes"
                android:textAlignment="center"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/imageView19"
                android:layout_width="373dp"
                android:layout_height="266dp"
                android:layout_margin="10dp"
                app:srcCompat="@mipmap/pqchicomendes" />

            <Button
                android:id="@+id/btnSaibaMaisChicoMendes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:backgroundTint="@color/red"
                android:onClick="btnTelaChico"
                android:text="Saiba mais" />

            <TextView
                android:id="@+id/tvTituloBotanico"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginTop="10dp"
                android:text="Jardim Botânico"
                android:textAlignment="center"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/imageView20"
                android:layout_width="373dp"
                android:layout_height="225dp"
                android:layout_margin="10dp"
                app:srcCompat="@mipmap/botanicojd" />

            <Button
                android:id="@+id/btnSaibaMaisJardimBotanico"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:backgroundTint="@color/red"
                android:onClick="btnTelaBotanico"
                android:text="Saiba mais" />

            <TextView
                android:id="@+id/tvTituloQuinzinho"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginTop="10dp"
                android:text="Zoológico Quinzinho de Barros"
                android:textAlignment="center"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/imageView21"
                android:layout_width="373dp"
                android:layout_height="266dp"
                android:layout_margin="10dp"
                app:srcCompat="@mipmap/zooquinzinho" />

            <Button
                android:id="@+id/btnSaibaMaisZooQuinzinho"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:backgroundTint="@color/red"
                android:onClick="btnTelaZoo"
                android:text="Saiba mais" />

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnVoltar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/red"
        android:onClick="btnFechar"
        android:text="Fechar"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>